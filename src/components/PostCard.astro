---
import { Image } from '@astrojs/image/components';
import { slugify, formatDate } from '../js/utils.js';
const { frontmatter, url, tagType } = Astro.props;
const Tag = tagType;

const { title, image, description, category } = frontmatter;
---

<div class="card w-full sm:w-1/2 md:w-2/3 lg:w-1/3 xl:w-1/3 my-4 mx-auto text-center">
	<a href={url}>
		<div
			class="card-container w-10/12 mx-auto border rounded-2xl p-3 flex flex-col justify-center items-center hover:scale-105 transition-all"
		>
			<div class="card-header mb-4 border-b-2 p-4">
				<p class="text-blue-600 hover:text-blue-800">{category}</p>
			</div>
			<div class="card-image mb-4 border-b-2 p-4">
				<Image
					src={image}
					alt="blog post image"
					format="webp"
					quality={80}
					height={150}
					width={440}
					aspectRatio="4:1"
				/>
			</div>
			<div class="card-body">
				<h3 class="text-2xl">{title}</h3>
				<p>
					{description}
				</p>
				<a href={url} class="text-blue-600 hover:text-blue-800"> Read more</a>
			</div>
		</div>
	</a>
</div>
